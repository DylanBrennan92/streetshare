<div class="container content-space-1">
 <div class="flex-grow-1 mx-auto" style="max-width: 28rem;">
<h2>Edit Details for <%= current_user.displayname %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3 py-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

   <div class="mb-3 py-2">
    <%= f.label :displayname %><br />
    <%= f.text_field :displayname, autofocus: false, autocomplete: "Display Name", class:"form-control"%>
  </div>


  <div class="mb-3 py-2">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
    <% if @minimum_password_length %>
    <% end %>
  </div>
 
  <div class="mb-3 py-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control"%>
  </div>

  <div class="mb-3 py-2">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control" %>
  </div>

  <div class="mb-3 py-2">
    <%= f.submit "Update Details" ,class:"btn btn-success mb-5", style:"width: 100%; height:4em" %>
  </div>
<% end %>

<p>Unhappy?</p>
<h4>Cancel my account</h4>

<%= button_to "Cancel my account",registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class:"btn btn-danger",style:"width: 100%; height:4em" %>
<%= link_to "Back", :back %>
  </div>
</div>