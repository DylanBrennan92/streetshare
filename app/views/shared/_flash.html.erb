
<%if flash[:notice]%>
    <div class="alert alert-info mt-4" role="alert">
        <%= flash[:notice]%>
    </div>
<% end %>


<%if flash[:alert]%>
    <div class="alert alert-warning mt-4" role="alert" style="d-flex justify-content-center;" style="font-weight:bold;font-size:28px;">
    <%= flash[:alert] %>
    </div>
<% end %>

<%if flash[:secondary]%>
    <div class="alert alert-secondary mt-4" role="alert" style="font-weight:bold;font-size:28px;">
    <%= flash[:info]%>
    </div>
<% end %>